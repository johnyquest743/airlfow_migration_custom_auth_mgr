{
  "_comment": "===============================================================================",
  "_comment2": "File: oidc_client.json - Custom IDA OIDC Configuration",
  "_comment3": "Location: $AIRFLOW_HOME/config/oidc_client.json",
  "_comment4": "Configure this file with your firm's IDA authentication details",
  "_comment5": "===============================================================================",
  
  "providers": [
    {
      "name": "ida",
      "enabled": true,
      "type": "custom_ida",
      "description": "Internal IDA OIDC Authentication",
      
      "_comment_client": "Client credentials from IDA team",
      "client_id": "airflow-prod",
      "client_secret": "REPLACE_WITH_IDA_CLIENT_SECRET",
      
      "_comment_endpoints": "IDA OIDC endpoints - Update these with actual IDA URLs",
      "issuer": "https://ida.yourfirm.com",
      "server_metadata_url": "https://ida.yourfirm.com/.well-known/openid-configuration",
      "authorize_url": "https://ida.yourfirm.com/oauth2/authorize",
      "access_token_url": "https://ida.yourfirm.com/oauth2/token",
      "userinfo_url": "https://ida.yourfirm.com/oauth2/userinfo",
      "jwks_uri": "https://ida.yourfirm.com/oauth2/jwks",
      "logout_url": "https://ida.yourfirm.com/oauth2/logout",
      "revocation_url": "https://ida.yourfirm.com/oauth2/revoke",
      "introspection_url": "https://ida.yourfirm.com/oauth2/introspect",
      
      "_comment_api": "API base URL if different from issuer",
      "api_base_url": "https://ida.yourfirm.com",
      
      "_comment_scope": "Scopes required by IDA - Update based on IDA documentation",
      "scope": "openid email profile groups roles",
      
      "_comment_claims": "Claim names used by IDA",
      "username_claim": "preferred_username",
      "email_claim": "email",
      "first_name_claim": "given_name",
      "last_name_claim": "family_name",
      "group_claim": "groups",
      "role_claim": "roles",
      "employee_id_claim": "employee_id",
      "department_claim": "department",
      
      "_comment_ui": "UI customization",
      "icon": "fa-building",
      "display_name": "IDA Login",
      "button_text": "Sign in with IDA",
      "token_key": "access_token",
      
      "_comment_advanced": "Advanced OIDC settings",
      "response_type": "code",
      "response_mode": "query",
      "grant_type": "authorization_code",
      "pkce_enabled": true,
      "pkce_method": "S256",
      "state_required": true,
      "nonce_required": true,
      "token_endpoint_auth_method": "client_secret_post",
      
      "_comment_token": "Token validation settings",
      "validate_jwt": true,
      "verify_signature": true,
      "verify_aud": true,
      "verify_iss": true,
      "verify_exp": true,
      "clock_skew_seconds": 60,
      
      "_comment_session": "Session management",
      "refresh_token_enabled": true,
      "auto_refresh_token": true,
      "token_refresh_window_seconds": 300,
      
      "_comment_network": "Network settings",
      "timeout_seconds": 30,
      "verify_ssl": true,
      "ssl_cert_path": null,
      "ssl_key_path": null,
      "ca_bundle_path": "/etc/ssl/certs/ca-bundle.crt",
      
      "_comment_proxy": "Proxy settings if required",
      "proxy_enabled": false,
      "proxy_url": null,
      "proxy_username": null,
      "proxy_password": null,
      
      "_comment_custom": "Custom headers or parameters",
      "custom_headers": {
        "X-Firm-ID": "your-firm-id",
        "X-Application": "Airflow"
      },
      "custom_authorize_params": {
        "prompt": "login",
        "max_age": "3600"
      },
      "custom_token_params": {},
      
      "_comment_attributes": "Additional user attributes to fetch",
      "fetch_additional_attributes": true,
      "additional_attributes": [
        "employee_id",
        "department",
        "cost_center",
        "manager_email",
        "location",
        "division"
      ]
    }
  ],
  
  "_comment_redirect": "Redirect URIs - Register these in IDA",
  "redirect_uris": [
    "http://localhost:8080/oauth-authorized/ida",
    "https://airflow-dev.yourfirm.com/oauth-authorized/ida",
    "https://airflow-uat.yourfirm.com/oauth-authorized/ida",
    "https://airflow-prod.yourfirm.com/oauth-authorized/ida"
  ],
  
  "_comment_post_logout": "Post logout redirect URIs",
  "post_logout_redirect_uris": [
    "http://localhost:8080",
    "https://airflow-dev.yourfirm.com",
    "https://airflow-uat.yourfirm.com",
    "https://airflow-prod.yourfirm.com"
  ],
  
  "_comment_discovery": "Discovery settings",
  "discovery": {
    "use_discovery": true,
    "cache_discovery": true,
    "discovery_cache_ttl_seconds": 3600
  },
  
  "_comment_metadata": "Metadata",
  "metadata": {
    "version": "1.0",
    "created": "2025-01-01",
    "description": "IDA OIDC configuration for internal authentication",
    "contact": "ida-support@yourfirm.com",
    "documentation_url": "https://ida.yourfirm.com/docs"
  }
}